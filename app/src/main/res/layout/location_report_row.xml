<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/parent_row_report"
    android:background="@drawable/text_edit_drawable"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="3dp"
    >
    <TextView
        android:id="@+id/drug_name_report_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="Name of the medicinal product"
        />
    <TextView
        android:id="@+id/report_location_report_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        tools:text="Injection Store" />
    <TextView
        android:id="@+id/report_date_report_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        tools:text="Oct 5, 2021" />
</LinearLayout>
